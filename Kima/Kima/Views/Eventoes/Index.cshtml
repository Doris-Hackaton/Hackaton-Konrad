@model IEnumerable<Kima.Evento>

@{
    ViewBag.Title = "Eventos";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("[id$=A4]").addClass("active");
    });
</script>

<legend style="margin-top:45px"><h2>Eventos</h2></legend>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<div class="well">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.anotaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.doctor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anotaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
                </td>
            </tr>
}

    </table>
</div>