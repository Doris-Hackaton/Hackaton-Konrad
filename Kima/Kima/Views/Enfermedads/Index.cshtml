@model IEnumerable<Kima.Enfermedad>

@{
    ViewBag.Title = "Medicamentos";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("[id$=A2]").addClass("active");
    });
</script>

<legend style="margin-top:45px"><h2>Enfermedades</h2></legend>


<p>
    @Html.ActionLink("Agregar nueva", "Create")
</p>

<div class="well">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_diagnostico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ultimo_evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_diagnostico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ultimo_evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
                </td>
            </tr>
}

    </table>

</div>
