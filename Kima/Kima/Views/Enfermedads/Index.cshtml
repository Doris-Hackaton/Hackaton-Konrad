@model IEnumerable<Kima.Enfermedad>

@{
    ViewBag.Title = "Index";
}

<h2>Enfermedades</h2>

<p>
    @Html.ActionLink("Agregar enfermedad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_diagnostico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ultimo_evento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_diagnostico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ultimo_evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
